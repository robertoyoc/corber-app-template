                                            <span class='fa fa-calendar'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-cloud'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
