    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Espacio de trabajo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-10  ">
                        <h6>Ingresa un nombre</h6>
                        <input type="text" class="form-control"> 
                    </div>
                    <div class="col-2 ">
                        <div class="dropdown" style="margin-left: -70%; margin-right: -1%; margin-top: 40%;">
                            <button class='btn btn-primary' data-toggle='dropdown' style='position:relative;
                                left: 40px;
                                top: -10px;
                                width: 3rem;
                                border: 2px solid #73AD21;
                                padding: 10px;'>
                                <span class='fa {{icon}}'></span>
                            </button>
                            
                            <ul class='dropdown-menu'>
                                <div class='card' style='width: 61mm;'>
                                    <div class='card-body' style='border: none'>
                                        <button {{action 'changeIcon' 'fa-address-book'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-address-book'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-address-card'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-address-card'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-archive'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-archive'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-box'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-box'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-folder-open'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-left: -2px;'>
                                            <span class='fa fa-folder-open'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-balance-scale'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-balance-scale'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-university'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-university'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-bell'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-bell'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-bookmark'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-right: 4px;'>
                                            <span class='fa fa-bookmark'></span>
                                        </button>
                                        <button {{action 'changeIcon' 'fa-building'}} class='btn btn-light border border-dark p-1' style='width: 30px; height: 30px; margin-top: -1px; margin-bottom: 8px; margin-left: -2px;'>
